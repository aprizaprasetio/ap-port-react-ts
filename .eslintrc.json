{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        "func-call-spacing": "warn",
        "func-names": "warn",
        "camelcase": "warn",
        "no-delete-var": "warn",
        "no-duplicate-imports": "warn",
        "no-dupe-keys": "warn",
        "no-dupe-args": "warn",
        "no-alert": "warn",
        "no-else-return": "warn",
        "semi": "warn",
        "comma-spacing": "warn"
    }
}
